{
	"name": "__MSG_ext_name__",
	"description": "__MSG_ext_desc__",
	"manifest_version": 2,
	"version": "6.1",
	"icons": {
		"128": "img/icon_128.png"
	},
	"options_page": "options.html",
	"minimum_chrome_version": "10",
	"default_locale": "cs",
	"background": {
		"page": "popup.html"
	},
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup" : "popup.html"
	},
	"permissions": ["tabs", "http://*/*", "https://*/*", "storage"],
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"content_scripts": [ {
		"css": [ "css/style-csfd.css" ],
		"js": [ "js/jquery.js", "js/extras.js", "js/extras_episodes.js", "js/helper.js" ],
		"matches": [ "http://www.csfd.cz/film/*", "https://www.csfd.cz/film/*" ]
	},
	{
		"css": [ "css/style-csfd.css" ],
		"js": [ "js/jquery.js", "js/extras_tooltips.js", "js/jquery.hoverIntent.minified.js" ],
		"matches": [ "http://www.csfd.cz/*", "https://www.csfd.cz/*" ]
	},
	{
		"js": [ "js/extras_export.js" ],
		"matches": [ "http://www.csfd.cz/uzivatel/*", "https://www.csfd.cz/uzivatel/*" ]
	},
	{
		"js": ["js/content_script.js"],
		"matches": [ "http://*/*", "https://*/*" ]
	},
	{
		"css": [ "css/style-imdb.css" ],
		"js": [ "js/jquery.js", "js/extras_imdb.js" ],
		"matches": [ "http://www.imdb.com/*" ]
	}],
		"web_accessible_resources": [ "img/cc.gif", "img/utorrent.jpg" , "img/up.png" , "img/csfd.png" ]
}
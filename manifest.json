{
    "name": "CSFD Vyhľadávanie & Rozšírenia",
    "description": "Vyhľadávanie filmov, seriálov, tvorcov v databáze CSFD. A rôzne rozšírenia CSFD stránky.",
    "manifest_version": 2,  
    "version": "5.2",
    "icons": { 
        "128": "icon_128.png" 
    },
    "options_page": "options.html", 
    "minimum_chrome_version": "10",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup" : "popup.html" 
    },
    "permissions": ["tabs", "http://*/*", "https://*/*", "storage"],
    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
    "content_scripts": [ {
        "css": [ "style.css" ],
        "js": [ "jquery.js", "extras.js" ],
        "matches": [ "http://www.csfd.cz/film/*", "https://www.csfd.cz/film/*" ]
   },
    {
        "css": [ "style.css" ],
        "js": [ "jquery.js", "extras_tooltips.js", "jquery.hoverIntent.minified.js" ],
        "matches": [ "http://www.csfd.cz/*", "https://www.csfd.cz/*" ]
   },
    {
        "js": ["content_script.js"],
        "matches": [ "http://*/*", "https://*/*" ]
   },
    {
        "js": [ "jquery.js", "extras_imdb.js" ],
        "matches": [ "http://www.imdb.com/*" ]
   }],
        "web_accessible_resources": [ "img/cc.gif", "img/utorrent.jpg" , "img/up.png" , "img/csfd.png" ]
}